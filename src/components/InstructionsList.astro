---
export interface Props {
    title: string;
    steps: string[];
}
const { title, steps } = Astro.props;
---

<div class="instructions">
    <h3>{title}</h3>
    <ol class="steps-list">
        {steps.map((step) => <li>{step}</li>)}
    </ol>
</div>

<style lang="scss">
    .instructions {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 16px 18px;
        border-left: 4px solid var(--primary-brand-color);

        @media screen and (max-width: 840px) {
            padding: 14px;
            margin-bottom: 16px;
            border: none;
            padding: 0;
            font-size: 1.25em;

            @media screen and (max-width: 840px) {
                font-size: 1.1em;
                margin-bottom: 12px;
            }
        }
    }

    .steps-list {
        margin: 0;
        padding-left: 24px;

        li {
            margin-bottom: 12px;
            line-height: 1.6;

            &:last-child {
                margin-bottom: 0;
            }
        }

        @media screen and (max-width: 840px) {
            padding-left: 20px;

            li {
                margin-bottom: 10px;
            }
        }
    }
</style>
