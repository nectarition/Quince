---
import type { PearEventAppModel, PearEventLink } from '@types';
import EventCard from './EventCard.astro';

export interface Props {
  today: Date;
  events: PearEventAppModel[];
  links: Record<string, PearEventLink[]>;
}

const props = Astro.props;
---

<div class="cardRack">
  {props.events.map((event) => <EventCard today={props.today} event={event} links={props.links[event.id] ?? []} isPickUp={true} />)}
</div>

<p class="text-right">
  <a href="#future-events">一番上に戻る</a>
</p>

<style lang="scss">
  .cardRack {
    margin-bottom: 24px;
    display: grid;
    gap: 16px;

    &:last-child {
      margin-bottom: 0;
    }

    @media screen and (max-width: 840px) {
      gap: 12px;
      margin-bottom: 20px;
    }
  }

  .monthTitle {
    font-size: 1.5em;
    font-weight: 700;
    margin-bottom: 20px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--primary-brand-color);
    color: var(--primary-brand-color);
    display: inline-block;

    @media screen and (max-width: 840px) {
      font-size: 1.3em;
      margin-bottom: 16px;
      padding-bottom: 10px;
    }
  }

  ul {
    padding: 0;
    list-style: none;
    li {
      margin-left: 1em;
      &::before {
        margin-left: -1em;
        content: '・';
      }
    }
  }

  .text-right {
    text-align: right;
    margin-top: 20px;

    a {
      font-size: 0.9em;
      display: inline-flex;
      align-items: center;
      gap: 4px;

      &::before {
        content: '↑';
      }
    }
  }
</style>
