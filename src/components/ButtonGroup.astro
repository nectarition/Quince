---
export interface Props {
    align?: 'left' | 'center' | 'right';
}
const { align = 'left' } = Astro.props;
---

<div class={`button-group align-${align}`}>
    <slot />
</div>

<style lang="scss">
  .button-group {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 20px;

    &:last-child {
        margin-bottom: 0;
    }

    &.align-center {
        justify-content: center;
    }

    &.align-right {
        justify-content: flex-end;
    }

    @media screen and (max-width: 840px) {
        gap: 10px;

        :global(.btn) {
            display: flex;
            flex: 1;
            min-width: 0;
            text-align: center;
            justify-content: center;
            align-items: center;
        }
    }
  }
</style>
